{
  "name": "server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "private": true,
  "engines": {
    "npm": ">=8",
    "node": ">=18",
    "pnpm": ">=9"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/server.ts",
    "build": "npx tsc",
    "start": "node dist/server.js",
    "commit": "cz",
    "prepare": "husky",
    "update": "pnpm update",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "dev:debug": "ts-node-dev --inspect -r tsconfig-paths/register --respawn src/server.ts",
    "test:watch": "jest --watch",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "db:seed": "ts-node-dev -r tsconfig-paths/register src/seeders/index.ts",
    "validate": "pnpm lint && pnpm type-check && pnpm test",
    "clean": "rimraf dist coverage"
  },
  "lint-staged": {
    "*.{ts,json,md}": "prettier --write",
    "src/**/*.ts": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "arctic": "3.7.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-mongo-sanitize": "2.2.0",
    "express-rate-limit": "^8.0.1",
    "express-useragent": "^1.0.15",
    "fs-extra": "^11.3.1",
    "helmet": "^8.1.0",
    "hpp": "0.2.3",
    "http-status": "^2.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.1",
    "multer": "2.0.2",
    "nodemailer": "^7.0.6",
    "nodemon": "^3.1.10",
    "os": "0.1.2",
    "otp-generator": "^4.0.1",
    "redis": "^5.8.2",
    "request-ip": "^3.3.0",
    "swagger-ui-express": "^5.0.1",
    "tslib": "^2.8.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/express-useragent": "^1.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/hpp": "0.2.6",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^7.0.1",
    "@types/otp-generator": "^4.0.2",
    "@types/request-ip": "^0.0.41",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "only-allow": "^1.2.1",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
